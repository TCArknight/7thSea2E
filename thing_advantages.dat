  <thing
    id="adSorcery"
    name="Sorcery"
    compset="Advantage"
    isunique="no"
    description="You gain the Sorcery from your National bloodline. If you purchase this Advantage after Hero Creation, you may only do so with a Hero Story.">
    <tag group="PointCost" tag="2"/>
    <!-- Add the Sorcery tag to the Character -->
    <eval index="1" phase="Setup" priority="6000"><![CDATA[
      perform hero.delete[HideTab.sorcery]
      perform hero.assign[Sorcery.Sorcery]
      ]]></eval>
      
    <!-- Add the Sorcery tag to the Character -->
    <eval index="2" phase="PreTraits" priority="5000"><![CDATA[
      
      doneif (hero.tagis[Sorcery.Sorcery] = 0)
      
      var sorID as string
      var myExpr as string
      var sorccount as number
      var tot as number
      
      sorID = hero.tagids[HasSorc.?,"|"]
      sorID = replace(sorID,"HasSorc","thingid",0)

      sorccount = hero.tagcount[Sorcery.Sorcery]

      ~Minor Powers count
      if (hero.tagis[Helper.AltMinAdv] <> 0) then
        ~ Progression: 2,3,4,4
        tot = (1 + sorccount)
        #resmax[resSorcMin] = minimum(tot,4)
      else
        #resmax[resSorcMin] += 2
        endif

      ~Major Powers count
      if (hero.tagis[Helper.AltMajAdv] <> 0) then
        ~ Progression: 1,2,3,4
        tot = sorccount
        #resmax[resSorcMaj] = tot
      else
        #resmax[resSorcMaj] += 1
        endif
          
      ]]></eval>      
    </thing>

