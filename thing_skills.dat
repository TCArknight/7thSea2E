    <fieldval field="trtAbbrev" value="Perf"/>
    <fieldval field="usrSource1" value="Hero"/>
    <tag group="DashTacCon" tag="NonCombat"/>
    </thing>
  <thing
    id="skRide"
    name="Ride"
