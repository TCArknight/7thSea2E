<?xml version="1.0" encoding="UTF-8"?>

<!-- This file contains the assortment of skills for the game system. Note that each
      skill is linked to an associated attribute for the character. This linkage allows
      the value of the skill to easily incorporate the effects of the linked attribute
      via a script on the component.
-->

<document signature="Hero Lab Data">

  <thing
    id="skAim"
    name="Aim"
    compset="Skill"
    isunique="yes"
    description="Use Aim when you point a pistol at someone and pull the trigger. Use Aim when you throw a knife across a crowded room with pinpoint accuracy, whether your target is a person or an object.">
    <fieldval field="trtAbbrev" value="Aim"/>
    </thing>
  <thing
    id="skAthletic"
    name="Athletics"
    compset="Skill"
    isunique="yes"
    description="Use Athletics to swing across a room on a chandelier, jump from rooftop-to-rooftop, or otherwise perform a dangerous physical stunt.">
    <fieldval field="trtAbbrev" value="Athl"/>
    <tag group="DashTacCon" tag="NonCombat"/>
    </thing>
  <thing
    id="skBrawl"
    name="Brawl"
    compset="Skill"
    isunique="yes"
    description="Use Brawl whenever you punch or kick someone in the face. Use Brawl when you grab someone and drag him down an alleyway.">
    <fieldval field="trtAbbrev" value="Braw"/>
    <tag group="DashTacCon" tag="Combat"/>
    </thing>
  <thing
    id="skConvince"
    name="Convince"
    compset="Skill"
    isunique="yes"
