    <fieldval field="trtAbbrev" value="Empa"/>
    <tag group="DashTacCon" tag="NonCombat"/>
    </thing>
  <thing
    id="skHide"
    name="Hide"
    compset="Skill"
    isunique="yes"
    description="Use Hide when you sneak through a dark room without the guard on watch seeing you. Use Hide when you keep a weapon or other item hidden, and avoid it being found if you are searched. Use Hide to attack an unsuspecting victim with a weapon or your fists.">
    <fieldval field="trtAbbrev" value="Hide"/>
    <tag group="DashTacCon" tag="NonCombat"/>
    </thing>
  <thing
    id="skIntim"
    name="Intimidate"
    compset="Skill"
    isunique="yes"
