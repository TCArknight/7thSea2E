<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- This file contains the definition of the "Skills" tab panel. This tab is where
      the user selects and adjusts the skills for the character.

      All public visual elements used with this tab panel start with the prefix "sk"
      to associate them with the tab.
-->

<document signature="Hero Lab Data">

  <portal
    id="soMinor"
    style="tblNormal">
    <table_dynamic
      component="PowerMin"
      showtemplate="soMinPick"
      choosetemplate="SimpleItem"
      useagentadd="yes"
      useagentcandidate="yes"
      useagentlinkage="yes"
      candidatefield="sPwrExprMi">
      <titlebar><![CDATA[
        @text = "Add a " & agent.field[sMinName].text
        ]]></titlebar>
      <description/>
      <headertitle><![CDATA[
        @text = agent.field[sMinName].text & ": " & hero.child[resSorcMin].field[resSummary].text
        ]]></headertitle>
      <additem><![CDATA[
        @text &= "Add New " & agent.field[sMinName].text
        ]]></additem>
      </table_dynamic>
    </portal>
    
  <portal
    id="soMajor"
    style="tblNormal">
    <table_dynamic
      component="PowerMaj"
      showtemplate="soMajPick"
      choosetemplate="SimpleItem"
      useagentadd="yes"
      useagentcandidate="yes"
      useagentlinkage="yes"
      candidatefield="sPwrExprMa">
      <titlebar><![CDATA[
        @text = "Add a " & agent.field[sMajName].text
        ]]></titlebar>
      <description/>
      <headertitle><![CDATA[
        @text = agent.field[sMajName].text & ": " & hero.child[resSorcMaj].field[resSummary].text
        ]]></headertitle>
      <additem><![CDATA[
        @text &= "Add New " & agent.field[sMajName].text
        ]]></additem>
      </table_dynamic>
    </portal>
	
    <portal
      id="soSrcLbl"
      style="lblBrdCent">
      <label>
	    <labeltext><![CDATA[
        @text &= agent.field[sSrcName].text & ": "
        ]]></labeltext>
		</label>
      </portal> 
	  
    <portal
      id="soSrcTbl"
      style="tblNormal">
      <table_dynamic
        component="SorcHelp"
        showtemplate="SimpleItem"
        choosetemplate="SimpleItem"
		useagentadd="yes"
        useagentcandidate="yes"
        useagentlinkage="yes"
		candidatefield="sSrcTblExp">
        <titlebar><![CDATA[
          @text = "Add a " & agent.field[sSrcName].text
          ]]></titlebar>
        <description/>
        <headertitle><![CDATA[
          @text = agent.field[sSrcName].text & ": " & hero.child[resSorcSrc].field[resSummary].text
          ]]></headertitle>
        <additem><![CDATA[
          @text &= "Add New " & agent.field[sSrcName].text
          ]]></additem>
        </table_dynamic>
      </portal>

    <portal 
      id="soSrcChs" 
      style="chsNormal" 
      width="150">
      <chooser_table 
        component="SorcHelp" 
        choosetemplate="SimpleItem"
        useagentcandidate="yes"
        useagentlinkage="yes"
		candidatefield="sSrcChsExp">
        <chosen><![CDATA[
          if (@ispick = 0) then
            @text = "{text ff0000}-- Select --"
          else
            @text = field[name].text
            endif
          ]]></chosen>
        <titlebar>
          @text = ""
          </titlebar>
        </chooser_table>
      </portal>

  <template
    id="soMinPick"
    name="Minor Power Pick"
    compset="PowerMin"
    marginhorz="3"
    marginvert="2">

    <portal
      id="name"
      style="lblNormal"
      showinvalid="yes">
      <label
        field="name">
        </label>
      </portal>
     
    <portal
      id="info"
      style="actInfo">
      <action
        action="info">
        </action>
      <mouseinfo/>
      </portal>

    <portal
      id="delete"
      style="actDelete"
      tiptext="Click to delete this item">
      <action
        action="delete">
        </action>
      </portal>
      
    <portal
      id="domain"
      style="editNormal">
      <edit
        field="domDomain">
        </edit>
      </portal>
            
    <position><![CDATA[
      ~set up our height based on our tallest portal
      height = portal[info].height

      ~if this is a "sizing" calculation, we're done
      doneif (issizing <> 0)

      ~position our tallest portal at the top
      portal[info].top = 0
      portal[domain].width = 150

      ~center the other portals vertically
      perform portal[name].centervert
      perform portal[delete].centervert

      ~position the delete portal on the far right
      perform portal[delete].alignedge[right,0]

      ~position the info portal to the left of the delete button
      perform portal[info].alignrel[rtol,delete,-8]

      portal[domain].visible = tagis[User.NeedDomain]
      
      ~if we don't need a menu or domain, position the name across entire row
      if (tagis[User.UserSelect] + tagis[User.NeedDomain] = 0) then
        ~position the name on the left and let it use all available space
        portal[name].left = 0
        portal[name].width = minimum(portal[name].width,portal[info].left - 5)
        endif

      ~if we need a menu or domain, reveal and position the name accordingly
      ~Domain
      if (tagis[User.NeedDomain] = 1) then
        
        ~position the domain portal to the left of the info button
        perform portal[domain].alignrel[rtol,info,-8]
        
        ~position the name on the left and let it use all available space
        portal[name].left = 0
        portal[name].width = minimum(portal[name].width,portal[domain].left - 5)
        endif
      
           
      ~if the background is auto-added, change its font to indicate that fact
      if (candelete = 0) then
        perform portal[name].setstyle[lblAuto]
        endif
      ]]></position>

    </template>
